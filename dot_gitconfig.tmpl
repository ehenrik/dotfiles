[user]
	email = henrik.engman@me.com
	name = Henrik Engman

[alias]
	st = status --short --branch
	oneline = log --oneline --decorate
	graph = log --graph
	ci = commit
	ca = commit --amend
	co = checkout

[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	autocrlf = input
	{{ if (eq .chezmoi.arch "amd64") -}}
	editor = /usr/local/bin/vim
	{{ else -}}
	editor = /opt/homebrew/bin/vim
	{{ end -}}
	excludesfile = /Users/henrikengman/.gitignore_global
	pager = delta --dark

[interactive]
	diffFilter = delta --color-only --dark

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	history-view-vpane-position = 579
	main-window-view = HistoryView
	file-view-vpane-position = 802
	show-graph = true

[rerere]
	enabled = 1

[push]
	default = matching

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[url "https://"]
	insteadOf = git://

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[diff]
	compactionHeuristic = true

[help]
	autocorrect = 15

[gpg]
    program = gpg

#[commit]
#	gpgsign = true

[init]
	defaultBranch = main

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/

[includeIf "gitdir:~/Source/CustomerProjects/Autocom/"]
	path = ~/Source/CustomerProjects/Autocom/.gitconfig
